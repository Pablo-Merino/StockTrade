.centered_container{:style=>"width:600px; margin:0 auto"}
	%h2{:style=>"text-align:center"} Sign in

	.panel{:style=>'width:600px'}
		= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
			%div
				.row.collapse
					.three.mobile-one.columns
						%span.prefix= "Username"
					.nine.mobile-one.columns
						= f.text_field :username
			%div
				.row.collapse
					.three.mobile-one.columns
						%span.prefix= "Password"
					.nine.mobile-one.columns
						= f.password_field :password
			- if devise_mapping.rememberable?
				%div
					= f.label :remember_me do
						= f.check_box :remember_me
						Remember me

			%div{:style=>"text-align:center"}= f.submit "Sign in", :class => "success button"
			%br/
			%div{:style=>"text-align:center"}= link_to 'Sign up', new_registration_path(resource_name), :class => "small secondary button"

